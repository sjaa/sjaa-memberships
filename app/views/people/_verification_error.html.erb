<div class="row">
  <div class="col-md-6">
    <div class="alert alert-danger" role="alert">
      <i class="bi bi-exclamation-triangle-fill"></i>
      <%= error %>
      <% if defined?(timestamp) && timestamp %>
        <br>
        <small class="text-muted">
          <i class="bi bi-clock"></i>
          Attempted on <%= timestamp %>
        </small>
      <% end %>
    </div>
  </div>
</div>