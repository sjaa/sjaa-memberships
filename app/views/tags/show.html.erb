<p style="color: green"><%= notice %></p>
<h1><%= @tag&.name&.titleize %></h1>
<div class="d-flex mb-4">
  <%= link_to "Edit this tag", edit_tag_path(@tag), class: 'btn btn-secondary' %>&nbsp;
  <%= link_to "Back to tags", tags_path, class: 'btn btn-secondary' %>&nbsp;
  <%= button_to "Delete", @tag, method: :delete, class: 'btn btn-danger', data: {turbo_confirm: 'Are you TOTALLY sure you want to delete this tag??  This operation can not be undone!' } %>
</div>

<h2>Equipment</h2>
<div class="d-flex">
<% @equipment&.each do |equipment| %>
  <%= render equipment %>
<% end %>
</div>