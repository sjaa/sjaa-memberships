<div class="row">
  <div class="col-12">
    <h1>Google Group Sync</h1>
    <p>
      Select a group below to synchronize its membership with a Google Group.
      The sync process will ensure that the people in the selected role match
      the members in the corresponding Google Group.
    </p>

    <div class="card mt-4">
      <div class="card-body">
        <h2 class="card-title">Select a Group to Sync</h2>
        <%= form_with url: google_group_sync_path, method: :get, local: true do |f| %>
          <div class="mb-3">
            <label class="form-label">Group</label>
            <select name="role_id" class="form-select">
              <option value="members">Members (Active Members Only) - members@sjaa.net</option>
              <% @roles.each do |role| %>
                <option value="<%= role.id %>">
                  <%= role.name %><%= role.members_only ? ' (Active Members Only)' : '' %> - <%= role.email %>
                </option>
              <% end %>
            </select>
            <small class="form-text text-muted">
              Groups marked with "(Active Members Only)" will only sync people with active memberships.
            </small>
          </div>

          <button type="submit" class="btn btn-primary">View Group</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
