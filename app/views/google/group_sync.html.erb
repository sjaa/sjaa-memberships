<div class="row">
  <div class="col-12">
    <h1>Google Group: <%= @group_name %></h1>
    <p>
      <strong>Group Email:</strong> <%= @group_email %><br/>
      <strong>Filter:</strong> <%= @members_only ? 'Active Members Only' : 'All People in Group' %>
    </p>
    <p>
      The table below shows the current list of people in the <%= @group_email %>
      Google Group. Use the "Compute Difference" button below to compare the Group membership
      with the people in the <%= @group ? 'group' : 'membership database' %>.
    </p>
    <p>
    <%= link_to 'Back to Group Selection', google_groups_path, class: 'btn btn-secondary' %>
    <%= link_to 'Compute Difference', google_group_sync_path(group_id: @group_id, diff: true), class: 'btn btn-primary' %>
    </p>

    <% if @diff %>
    <p>
    <% to_add = @unmatched_people.select{|person| person.email.present?}.size %>
    <% to_remove = @group_unmatched.select{|mh| mh[:email]}.size %>
    <%= to_add %> <%='person'.pluralize(to_add)%> <%= @commit ? "were added" : 'will be added' %>.
    <%= to_remove %> <%='person'.pluralize(to_remove)%> <%= @commit ? "were removed" : 'will be removed' %>.
    </p>
    <p>
    <% if @commit %>
    See below for details.
    <% else %>
    <%= link_to 'Sync (Add and Remove)', google_group_sync_path(group_id: @group_id, diff: true, commit: true), class: 'btn btn-sm btn-primary' %>
    <%= link_to 'Sync (Add Only)', google_group_sync_path(group_id: @group_id, diff: true, commit: true, add_only: true), class: 'btn btn-sm btn-success' %>
    <% end %>
    </p>

    <h2><%= @members_only ? 'Active Members' : 'People in Group' %> Missing From Google Group</h2>
    <div class="table-responsive mt-2">
      <table class="table table-striped">
        <tr>
          <th>Name</th>
          <th>Email(s)</th>
          <% if @members_only %>
          <th>Status</th>
          <% end %>
        </tr>
        <% @unmatched_people.each do |person| %>
          <tr>
            <td><%= link_to person.name, person %></td>
            <td><%=person.contacts.map(&:email).select(&:present?).join('<br/>').html_safe%></td>
            <% if @members_only %>
            <td><%=person.status%></td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>

    <h2>Google Group Members That Are Not <%= @members_only ? 'Active Members' : 'In Group' %></h2>
    <div class="table-responsive mt-2">
      <table class="table table-striped">
        <tr>
          <th>Name</th>
          <th>Email</th>
        </tr>
        <% @group_unmatched.each do |mh| %>
          <tr>
            <td>
              <%if mh[:person] %>
                <%=link_to mh[:person]&.name, mh[:person]%>
              <% else %>
                Unknown
              <% end %>
            </td>
            <td><%=mh[:email]%></td>
          </tr>
        <% end %>
      </table>
    </div>

    <h2>Google Group Members Who Are <%= @members_only ? 'Active Members' : 'In Group' %></h2>
    <div class="table-responsive mt-2">
      <table class="table table-striped">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Type</th>
          <% if @members_only %>
          <th>Status</th>
          <% end %>
        </tr>
        <% @group_matched.each do |mh| %>
          <tr>
            <td><%= link_to mh[:person].name, mh[:person] %></td>
            <td><%=mh[:member].email%></td>
            <td><%=mh[:member].role%></td>
            <td><%=mh[:member].type%></td>
            <% if @members_only %>
            <td><%=mh[:person].status%></td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
    <% else %>
    <div class="table-responsive mt-4">
      <table class="table table-striped">
        <tr>
          <th>Email</th>
          <th>Role</th>
          <th>Type</th>
        </tr>
        <% @members.each do |member| %>
        <tr>
          <td><%=member.email%></td>
          <td><%=member.role%></td>
          <td><%=member.type%></td>
        </tr>
        <% end %>
      </table>
    </div>
    <% end %>
  </div>
</div>