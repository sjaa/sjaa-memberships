<div class="row">
  <div class="col-12">
    <h1>Google Group: <%= @group_name %></h1>
    <p>
      <strong>Group Email:</strong> <%= @group_email %><br/>
      <strong>Filter:</strong> <%= @members_only ? 'Active Members Only' : 'All People in Group' %>
    </p>
    <p>
      The table below shows the current list of people in the <%= @group_email %>
      Google Group. Use the "Compute Difference" button below to compare the Group membership
      with the people in the <%= @group ? 'group' : 'membership database' %>.
    </p>
    <p>
    <%= link_to 'Back to Group Selection', google_groups_path, class: 'btn btn-secondary' %>
    <%= link_to 'Compute Difference', google_group_sync_path(group_id: @group_id, diff: true), class: 'btn btn-primary' %>
    </p>

    <% if @diff %>
    <p>
    <% to_add = @unmatched_people.select{|person| person.email.present?}.size %>
    <% to_remove = @group_unmatched.select{|mh| mh[:email]}.size %>
    <%= to_add %> <%='person'.pluralize(to_add)%> will be added.
    <%= to_remove %> <%='person'.pluralize(to_remove)%> will be removed.
    </p>

    <div class="card mb-3">
      <div class="card-header">
        <h5 class="mb-0">Sync Options</h5>
      </div>
      <div class="card-body">
        <%= form_tag google_group_sync_path, method: :get, class: 'form-inline' do %>
          <%= hidden_field_tag :group_id, @group_id %>
          <%= hidden_field_tag :diff, true %>
          <%= hidden_field_tag :commit, true %>

          <div class="form-group mb-3">
            <label for="remove_group" class="mr-2">Remove Group Email:</label>
            <%= text_field_tag :remove_group, @remove_group, class: 'form-control mr-3', placeholder: 'expired-members@sjaa.net', style: 'width: 300px;' %>
          </div>

          <div class="form-check mb-3 mr-3">
            <%= check_box_tag :use_remove_group, 'true', @use_remove_group, class: 'form-check-input' %>
            <%= label_tag :use_remove_group, 'Save removed members to remove group', class: 'form-check-label' %>
          </div>

          <div class="form-check mb-3 mr-3">
            <%= check_box_tag :clear_remove_group, 'true', @clear_remove_group, class: 'form-check-input' %>
            <%= label_tag :clear_remove_group, 'Clear remove group first', class: 'form-check-label' %>
          </div>

          <div class="form-group mb-3">
            <%= submit_tag 'Queue Sync Job (Add and Remove)', class: 'btn btn-sm btn-primary mr-2' %>
            <%= submit_tag 'Queue Sync Job (Add Only)', class: 'btn btn-sm btn-success mr-2', onclick: "document.getElementById('add_only_field').value='true'; return true;" %>
            <%= submit_tag 'Preview Mode (Populate Remove Group)', class: 'btn btn-sm btn-warning', onclick: "document.getElementById('preview_only_field').value='true'; return true;" %>
            <%= hidden_field_tag :add_only, '', id: 'add_only_field' %>
            <%= hidden_field_tag :preview_only, '', id: 'preview_only_field' %>
          </div>

          <p class="text-muted mb-0">
            <small>The sync will run as a background job. Check the Rails logs to monitor progress.</small>
          </p>
          <p class="text-info mb-0">
            <small><strong>Tip:</strong> Use preview mode to warn members before removing them. It will populate the remove group without modifying the primary group.</small>
          </p>
        <% end %>
      </div>
    </div>

    <h2><%= @members_only ? 'Active Members' : 'People in Group' %> Missing From Google Group</h2>
    <div class="table-responsive mt-2">
      <table class="table table-striped">
        <tr>
          <th>Name</th>
          <th>Email(s)</th>
          <% if @members_only %>
          <th>Status</th>
          <% end %>
        </tr>
        <% @unmatched_people.each do |person| %>
          <tr>
            <td><%= link_to person.name, person %></td>
            <td><%=person.contacts.map(&:email).select(&:present?).join('<br/>').html_safe%></td>
            <% if @members_only %>
            <td><%=person.status%></td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>

    <h2>Google Group Members That Are Not <%= @members_only ? 'Active Members' : 'In Group' %></h2>
    <div class="table-responsive mt-2">
      <table class="table table-striped">
        <tr>
          <th>Name</th>
          <th>Email</th>
        </tr>
        <% @group_unmatched.each do |mh| %>
          <tr>
            <td>
              <%if mh[:person] %>
                <%=link_to mh[:person]&.name, mh[:person]%>
              <% else %>
                Unknown
              <% end %>
            </td>
            <td><%=mh[:email]%></td>
          </tr>
        <% end %>
      </table>
    </div>

    <h2>Google Group Members Who Are <%= @members_only ? 'Active Members' : 'In Group' %></h2>
    <div class="table-responsive mt-2">
      <table class="table table-striped">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Role</th>
          <th>Type</th>
          <% if @members_only %>
          <th>Status</th>
          <% end %>
        </tr>
        <% @group_matched.each do |mh| %>
          <tr>
            <td><%= link_to mh[:person].name, mh[:person] %></td>
            <td><%=mh[:member].email%></td>
            <td><%=mh[:member].role%></td>
            <td><%=mh[:member].type%></td>
            <% if @members_only %>
            <td><%=mh[:person].status%></td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
    <% else %>
    <div class="table-responsive mt-4">
      <table class="table table-striped">
        <tr>
          <th>Email</th>
          <th>Role</th>
          <th>Type</th>
        </tr>
        <% @members.each do |member| %>
        <tr>
          <td><%=member.email%></td>
          <td><%=member.role%></td>
          <td><%=member.type%></td>
        </tr>
        <% end %>
      </table>
    </div>
    <% end %>
  </div>
</div>