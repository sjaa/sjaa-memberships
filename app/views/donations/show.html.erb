<div class="row">
  <div class="col-12">
  <%= link_to 'Send Donation Letter', donations_letter_path(@donation), class: 'btn btn-sm btn-success' %>
  </div>
  <%= render @donation %>
  <div class="col-12">
    <%= link_to "Back to donations", donations_path, class: 'btn btn-secondary d-inline-block' %>
    <%= link_to "Edit this donation", edit_donation_path(@donation), class: 'btn btn-primary d-inline-block' %>
    <p>
    <%= button_to "Delete this donation", @donation, method: :delete, form: { data: {turbo_confirm: 'Are you sure?'} }, class: 'btn btn-danger' %>
    </p>
  </div>
</div>