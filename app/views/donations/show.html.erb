<div class="row" data-controller="donation-letter">
  <div class="col-12">
    <button type="button" class="btn btn-sm btn-success" data-action="donation-letter#openModal">
      <i class="bi bi-envelope me-1"></i>Send Donation Letter
    </button>
  </div>
  <%= render @donation %>
  <div class="col-12">
    <%= link_to "Back to donations", donations_path, class: 'btn btn-secondary d-inline-block' %>
    <%= link_to "Edit this donation", edit_donation_path(@donation), class: 'btn btn-primary d-inline-block' %>
    <p>
    <%= button_to "Delete this donation", @donation, method: :delete, form: { data: {turbo_confirm: 'Are you sure?'} }, class: 'btn btn-danger' %>
    </p>
  </div>

  <!-- Donation Letter Modal -->
  <div class="modal fade" id="donationLetterModal" tabindex="-1" aria-labelledby="donationLetterModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="donationLetterModalLabel">Send Donation Letter</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form data-donation-letter-target="form"
                data-action="submit->donation-letter#sendLetter"
                action="<%= send_donation_letter_path(@donation) %>"
                data-preview-url="<%= preview_donation_letter_path(@donation) %>">
            <div class="mb-3">
              <label for="customMessage" class="form-label">
                <strong>Custom Message (Optional)</strong>
              </label>
              <textarea
                class="form-control"
                id="customMessage"
                name="custom_message"
                rows="5"
                data-donation-letter-target="customMessage"
                placeholder="Add a personal message to include in the letter..."></textarea>
              <div class="form-text">
                This message will be included in the donation letter above the standard receipt information.
              </div>
            </div>
            <div class="mb-3">
              <label for="ccEmails" class="form-label">
                <strong>CC Email Addresses (Optional)</strong>
              </label>
              <input
                type="text"
                class="form-control"
                id="ccEmails"
                name="cc_emails"
                data-donation-letter-target="ccEmails"
                placeholder="email1@example.com, email2@example.com">
              <div class="form-text">
                Separate multiple email addresses with commas. Standard BCCs (officers@sjaa.net, memberships@sjaa.net, donations@sjaa.net) will still be included.
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <button type="button" class="btn btn-info" data-action="donation-letter#previewLetter">
                <i class="bi bi-eye me-2"></i>Preview Letter
              </button>
              <button type="submit" class="btn btn-success" data-donation-letter-target="sendButton">
                <i class="bi bi-envelope me-2"></i>Send Letter
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>