# syntax = docker/dockerfile:1

# Make sure RUBY_VERSION matches the Ruby version in .ruby-version and Gemfile
ARG RUBY_VERSION=3.4.8
FROM registry.docker.com/library/ruby:$RUBY_VERSION-slim as base

# Rails app lives here
WORKDIR /rails

# Set development environment
ENV RAILS_ENV="development" \
    BUNDLE_DEPLOYMENT="0" \
    BUNDLE_PATH="/usr/local/bundle"


# Throw-away build stage to reduce size of final image
FROM base as build

# Declare build arguments for GitHub credentials
ARG GITHUB_USERNAME
ARG GITHUB_TOKEN

# Install packages needed to build gems
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y build-essential git libvips pkg-config

# Install PostgreSQL and related libraries
RUN apt-get update -qq && \
    apt-get install -y postgresql libpq-dev libpq5 libyaml-dev && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Install application gems
COPY Gemfile Gemfile.lock ./

# Configure bundler credentials globally and install gems
RUN bundle config set --global https://rubygems.pkg.github.com/sjaa ${GITHUB_USERNAME}:${GITHUB_TOKEN} && \
    bundle config set deployment false && \
    bundle install && \
    rm -rf "${BUNDLE_PATH}"/ruby/*/cache "${BUNDLE_PATH}"/ruby/*/bundler/gems/*/.git

# Copy application code
COPY . .

# Precompile bootsnap code for faster boot times (optional for dev)
# Skipping for now to avoid bundle resolution issues

# Precompiling assets for production without requiring secret RAILS_MASTER_KEY
#RUN SECRET_KEY_BASE_DUMMY=1 ./bin/rails assets:precompile

# Final stage for app image
FROM base

# Install build tools for native extensions (needed for development)
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y build-essential git libvips pkg-config && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Install PostgreSQL and related libraries - for keeps this time!!
RUN apt-get update -qq && \
    apt-get install -y postgresql libpq-dev libpq5 libyaml-dev && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Install packages needed for deployment
RUN apt-get update -qq && \
    apt-get install --no-install-recommends -y curl libsqlite3-0 libvips vim && \
    rm -rf /var/lib/apt/lists /var/cache/apt/archives

RUN apt-get update && \
    apt-get install -y chromium chromium-driver && \
    rm -rf /var/lib/apt/lists/*

# Copy built artifacts: gems, application
COPY --from=build /usr/local/bundle /usr/local/bundle
COPY --from=build /rails /rails

# Run and own only the runtime files as a non-root user for security
RUN useradd rails --create-home --shell /bin/bash && \
    chown -R rails:rails db log storage tmp /rails/config/ssl
USER rails:rails

# Entrypoint prepares the database.
ENTRYPOINT ["/rails/bin/docker-entrypoint"]

# Start the server by default, this can be overwritten at runtime
EXPOSE 3000
EXPOSE 1234

# Set up environment for remote debugging (disabled by default)
ENV RUBY_DEBUG_OPEN=false
ENV RUBY_DEBUG_HOST=0.0.0.0
ENV RUBY_DEBUG_PORT=1234

CMD ["sh", "-c", "RUBY_DEBUG_OPEN=true ruby -r debug/open_nonstop -S ./bin/rails server"]
